<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="viewmodel"
                type="fr.labard.gpsgpx.tracker.StatisticsFragmentViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".tracker.StatisticsFragment">

        <TextView
                android:id="@+id/fragment_statistics_textview_total_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_statistics_margin"
                app:stats_template="@{@string/stats_total_distance}"
                app:total_distance="@{viewmodel.locationsByRecordId}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/fragment_statistics_textview_total_time"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/fragment_statistics_textview_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_statistics_margin"
                app:stats_template="@{@string/stats_total_time}"
                app:total_time="@{viewmodel.locationsByRecordId}"
                app:layout_constraintTop_toBottomOf="@+id/fragment_statistics_textview_total_distance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/fragment_statistics_textview_recent_speed"/>


        <TextView
                android:id="@+id/fragment_statistics_textview_recent_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_statistics_margin"
                app:stats_template="@{@string/stats_recent_speed}"
                app:recent_speed="@{viewmodel.locationsByRecordId}"
                app:layout_constraintTop_toBottomOf="@+id/fragment_statistics_textview_total_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/fragment_statistics_textview_average_speed"/>

        <TextView
                android:id="@+id/fragment_statistics_textview_average_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_statistics_margin"
                app:stats_template="@{@string/stats_average_speed}"
                app:average_speed="@{viewmodel.locationsByRecordId}"
                app:layout_constraintTop_toBottomOf="@+id/fragment_statistics_textview_recent_speed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/fragment_statistics_textview_min_speed"
                />

        <TextView
                android:id="@+id/fragment_statistics_textview_min_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_statistics_margin"
                app:stats_template="@{@string/stats_min_speed}"
                app:min_speed="@{viewmodel.locationsByRecordId}"
                app:layout_constraintTop_toBottomOf="@+id/fragment_statistics_textview_average_speed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/fragment_statistics_textview_max_speed"
                />

        <TextView
                android:id="@+id/fragment_statistics_textview_max_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_statistics_margin"
                app:stats_template="@{@string/stats_max_speed}"
                app:max_speed="@{viewmodel.locationsByRecordId}"
                app:layout_constraintTop_toBottomOf="@+id/fragment_statistics_textview_min_speed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/fragment_statistics_textview_nb_locations"/>

        <TextView
                android:id="@+id/fragment_statistics_textview_nb_locations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_statistics_margin"
                app:stats_template="@{@string/stats_nb_locations}"
                app:nb_locations="@{viewmodel.locationsByRecordId}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_statistics_textview_max_speed"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>